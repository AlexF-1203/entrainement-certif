<h1 class="display-4 text-center pt-5"><%= @location.title %></h1>
<div class="container-fluid py-5 px-5">
  <div class="card mb-3">
    <div class="row g-0">
      <div class="col-md-4" style="height: 600px;">
        <%= image_tag "banner.jpg", class: "img-fluid rounded-start", alt: "Logo", style: "width: 100%; height: 100%; object-fit: cover;" %>
      </div>
      <div class="col-md-4">
        <div class="card-body p-5 d-flex flex-column" style="height: 100%;">
          <div class="text-center">
            <h1 class="card-title pt-5"><%= @location.title %></h1>
            <p class="card-text fs-4 my-4"><%= @location.description %></p>
            <p class="card-text fs-4">Address: <%= @location.address %></p>
            <p class="card-text fs-3">Price: <%= @location.price %> â‚¬ / night</p>
          </div>
          <div class="mt-auto text-center">
            <% if current_user.id == @location.user_id %>
              <%= link_to "Edit", edit_location_path(@location), class: 'btn btn-primary btn-lg me-3' %>
            <% end %>
            <%= link_to "Delete", location_path(@location),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: 'btn btn-danger btn-lg me-3' %>
          </div>
        </div>
      </div>
      <div class="col-md-4" style="height: 600px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
